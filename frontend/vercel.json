{
    "version": 2,
    "builds": [
      {
        "src": "server.ts",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/vite",
        "config": {
          "buildCommand": "vite build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.ts"
      },
      {
        "src": "/(assets|images)/.*",
        "dest": "/dist/$0"
      },
      {
        "src": "/verify",
        "dest": "/dist/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/index.html"
      }
    ],
    "env": {
      "VITE_ENABLE_ERUDA": "false"
  }
}
